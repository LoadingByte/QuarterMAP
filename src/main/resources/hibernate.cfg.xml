<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Use the c3po connection pool -->
        <property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
        <property name="hibernate.c3p0.timeout">100</property>
        <property name="hibernate.c3p0.idle_test_period">100</property>
        <property name="hibernate.c3p0.max_statements">50</property>

        <!-- Mappings -->
        <mapping class="com.quartercode.quartermap.dto.config.Config" />
        <mapping class="com.quartercode.quartermap.dto.user.User" />
        <mapping class="com.quartercode.quartermap.dto.project.Project" />
        <mapping class="com.quartercode.quartermap.dto.artifactrepo.ArtifactRepository" />
    </session-factory>
</hibernate-configuration>